  <% include ../partials/header.ejs %>

<!DOCTYPE html>
<html>
<head>
	<title></title>
</head>
<body>
	<header>
		<h1><%=album.title%></h1>
		<h2><%=album.artist%></h2>
	</header>
	<main>
	<form method="POST" action="/albums/<%=album.id%>/?_method=DELETE">
		<input type="submit" value="delete">	
	</form>

	<form action="/linernotes" method="POST">
		<br>
		<br>
		<fieldset>
			<legend>Add Comment:</legend>
			<input name="albumId" value="<%=album.id%>" hidden></input>
			<textarea type="text" name="note"></textarea>
			<button>Submit Comment</button>
		</fieldset>
	</form>
	<br>
	Comments:
	<% for (let i = allNotes.length-1; i > 0 ; i--){ %>
		<fieldset>
			<legend><a href="/users/<%=allNotes[i].author._id%>"><%=allNotes[i].author.username%></a> | <%=allNotes[i].date.toLocaleDateString('en-US')%>, <%=allNotes[i].date.toLocaleTimeString('en-US')%></legend>
			<p><%=allNotes[i].note%></p>
		</fieldset><br>
	<% } %>
	</main>
</body>
</html>